<form method="POST" action="/newuser">

    <label for="username">Username:</label>
    <input type="text" id="username" name="username" required pattern="^[a-zA-Z0-9]{4,16}$">
    <br>
    <small>Username must be 4-16 characters long and can only contain letters and numbers.</small>
    <br><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="password" required pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d]{5,16}$">
    <button type="button" onclick="showPassword()">Show Password</button>
    <br>
    <small>Password must be at least 5 characters long and contain at least one letter and one number. No character
        allowed.</small>
    <br><br>
    <p>There is no rest option. So save it carefully‚ùó Password Example: Hello123, Ocean12</p>
    <button type="submit">Register</button>
</form>

<!-- add a button to show password -->
<script>
    function showPassword() {
        var x = document.getElementById("password");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>